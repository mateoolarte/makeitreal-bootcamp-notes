<table>
  <thead>
    <th>Sku</th>
    <th>Quantity</th>
    <th>Name</th>
  </thead>
  <tbody>
    <% if @products %>
      <% @products.each do |product| %>
      <tr>
        <td><%= product[:sku] %></td>
        <td><%= product[:quantity] %></td>
        <td><%= product[:name] %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
