<%= form_tag search_path, method: "get" do %>
  <%= label_tag :email, "Email" %>
  <%= text_field_tag :email %>
  <%= submit_tag "Buscar" %>
<% end %>

<% if @user %>
  <%= @user.email %>
  <% @user.orders.each do |order| %>
    <%= order.id %> - <%= order.total %>
    <% order.products.each do |product| %>
      <%= product.sku %>
    <% end %>
  <% end %>
<% end %>
