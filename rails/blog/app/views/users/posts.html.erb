<% if @posts.empty? %>
  <h1>There is no posts</h1>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Blogs</h1>
    </div>
  </div>

  <div class="row">
  <%= link_to("create your first post (NO REMOTE)", new_user_post_path(current_user), class: 'btn btn-primary') %>
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to("Create Post", new_user_post_path(current_user), remote: true, class: 'btn btn-primary create-new-post') %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Contet</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><p><%= post.content %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="new-form">

</div>
