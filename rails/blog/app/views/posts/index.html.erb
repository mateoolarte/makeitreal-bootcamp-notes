<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Top 10 Blogs</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Contet</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to(post.title, new_post_comment_path(post)) %></td>
              <td><p><%= post.content %></p></td>
              <td><%= link_to('View', post_path(post)) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="modal-window"></div>
