<h1>Update Post</h1>

<%= form_for @post, url: user_post_path(current_user, @post), remote: true, class: 'edit_post' do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, "Message" %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit 'Update Post' %>
<% end %>

<script type="text/javascript">
  new PostView()
</script>
